<DownloadScreen>:
    id: aidentroooooe
    MDBoxLayout:
        id: downloadscreenmdscreen
        orientation: 'vertical'
        MDBoxLayout:
            orientation: 'horizontal'
            size_hint: (1, .1)
            MDTopAppBar:
                title: 'Download Youtube'
                orientation: 'horizontal'
                size_hint: (0.7, 1)
                MDIconButton:
                    icon: 'theme-light-dark'
                    on_release: app.theme_button()
                MDLabel:
                    id: version_app
                    text: app.versao_atual()
                    size_hint: (0.5, 1)
                MDLabel:
                    id: latest_version
                    text: app.pegar_ultima_versao()
                    size_hint: (0.7, 1)
        MDBoxLayout:
            id: content
            orientation: 'vertical'
            size_hint: (1, .9)
            padding: 10
            MDBoxLayout:
                orientation: 'horizontal'
                size_hint: (1, .1)
                MDTextField:
                    id: link
                    hint_text: 'Link do video'
                    size_hint: (.8, 1.2)
                    on_text_validate: app.confirm_link(link.text)
                    required: True
                    hint_text_color_normal: app.theme_cls.text_color
                    line_color_normal: app.theme_cls.text_color
                    text_color_normal: app.theme_cls.text_color
                    pos_hint: {'center_x': .5 , 'center_y': .3}
                MDLabel:
                    text: ' ' 
                    size_hint: (.05, 1)
                MDRaisedButton:
                    text: 'Enviar'
                    size_hint: (.1, None)
                    pos_hint: {'center_x': .5 , 'center_y': .5}
                    md_bg_color: app.theme_cls.primary_color
                    on_release: app.confirm_link(link.text)

            MDBoxLayout:
                orientation: 'vertical'
                size_hint: (1, .8)
                MDBoxLayout:
                    orientation: 'horizontal'
                    size_hint: (1, .8)
                    padding: 10
                    AsyncImage:
                        id: imagevideo
                        source: ''
                        size_hint: (0.5, 1)

                    MDBoxLayout:
                        id: floatlayoutconfigs
                        orientation: 'vertical'
                        size_hint: (0.5, 1)
                        padding: 10
                        theme_text_color: 'Custom'
                        text_color: app.theme_cls.text_color
                        MDLabel:
                            id: titlevideo
                            text: 'Titulo do video: '
                            theme_text_color: 'Custom'
                            text_color: app.theme_cls.text_color
                        MDLabel:
                            id: sizevideo
                            text: 'Tempo de duração'
                            theme_text_color: 'Custom'
                            text_color: app.theme_cls.text_color
                        MDLabel:
                            id: chanelvideo
                            text: 'Canal'
                            theme_text_color: 'Custom'
                            text_color: app.theme_cls.text_color
                        MDBoxLayout:
                            orientation: 'vertical'
                            MDLabel:
                                text: 'Selecione a resolução que deseja baixar:'
                                theme_text_color: 'Custom'
                                text_color: app.theme_cls.text_color

                            MDBoxLayout:
                                id: boxdownloads
                                orientation: 'horizontal'
                                size_hint: (1, 1)
                                pos_hint: {'center_x': .5 , 'center_y': .5}
                                spacing:10
                MDBoxLayout:
                    orientation: 'vertical'
                    size_hint: (1, .25)
                    MDBoxLayout:
                        orientation: 'vertical'
                        size_hint: (1, .2)
                        MDProgressBar:
                            id: progressbardown
                            value: 0
                            size_hint: (1, 1)
                            color: app.theme_cls.accent_color
                        MDLabel:
                            id: statusok
                            text: 'Status:'
                            size_hint: (1, 1)
                    MDTextField:
                        id: pathsave
                        hint_text: 'Caminho para salvar'
                        hint_text_color_normal: app.theme_cls.text_color
                        line_color_normal: app.theme_cls.text_color
                        text_color_focus: app.theme_cls.text_color
                        text_color_normal: app.theme_cls.text_color
                        size_hint: (1, .4)
