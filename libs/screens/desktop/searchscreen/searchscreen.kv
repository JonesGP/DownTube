<SearchScreen>
    MDBoxLayout:
        orientation: 'vertical'
        padding: 10
        MDBoxLayout:
            orientation: 'horizontal'
            size_hint: (1, 0.1)
            MDTextField:
                id: search
                hint_text: 'Pesquisar'
                icon_right_color: app.theme_cls.primary_color
            MDIconButton:
                icon: 'magnify'
                on_release: app.searchclass.searchvideos(search.text, boxvideossearch)
                
        MDScrollView:
            do_scroll_x: False
            do_scroll_y: True
            size_hint: (1, 0.9)
            MDBoxLayout:
                id: boxvideossearch
                orientation: 'vertical'
                size_hint: 1, None
                height: self.minimum_height